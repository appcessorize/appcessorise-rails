<% content_for :title, "Contact Submissions - Admin - Appcessorise" %>

<div class="min-h-screen bg-gradient-to-br from-gray-50 to-blue-50">
  <%= render 'shared/navigation' %>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="bg-white rounded-2xl shadow-xl overflow-hidden">
      <!-- Header -->
      <div class="bg-gradient-to-r from-blue-600 to-purple-600 px-8 py-6">
        <h1 class="text-3xl font-bold text-white">Contact Submissions</h1>
        <p class="text-blue-100 mt-2"><%= @contacts.count %> total submissions</p>
      </div>

      <!-- Contact List -->
      <div class="p-8">
        <% if @contacts.any? %>
          <div class="space-y-6">
            <% @contacts.each do |contact| %>
              <div class="bg-gray-50 rounded-xl p-6 border border-gray-200 hover:shadow-lg transition">
                <div class="flex items-start justify-between mb-4">
                  <div>
                    <h3 class="text-lg font-bold text-gray-900">
                      <%= [contact.first_name, contact.last_name].compact.join(' ').presence || 'Anonymous' %>
                    </h3>
                    <p class="text-sm text-gray-600 mt-1">
                      <%= contact.created_at.strftime("%B %d, %Y at %I:%M %p") %>
                    </p>
                  </div>
                  <span class="px-3 py-1 bg-blue-100 text-blue-700 rounded-full text-sm font-medium">
                    New
                  </span>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
                  <div>
                    <p class="text-sm font-semibold text-gray-700">Email</p>
                    <p class="text-gray-900"><%= contact.email %></p>
                  </div>

                  <% if contact.phone.present? %>
                    <div>
                      <p class="text-sm font-semibold text-gray-700">Phone</p>
                      <p class="text-gray-900"><%= contact.phone %></p>
                    </div>
                  <% end %>

                  <% if contact.company.present? %>
                    <div>
                      <p class="text-sm font-semibold text-gray-700">Company</p>
                      <p class="text-gray-900"><%= contact.company %></p>
                    </div>
                  <% end %>
                </div>

                <div>
                  <p class="text-sm font-semibold text-gray-700 mb-2">Message</p>
                  <p class="text-gray-900 whitespace-pre-wrap"><%= contact.message %></p>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="text-center py-12">
            <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
            </svg>
            <h3 class="mt-2 text-sm font-medium text-gray-900">No contact submissions</h3>
            <p class="mt-1 text-sm text-gray-500">No one has submitted the contact form yet.</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
