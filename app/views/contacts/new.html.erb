<% content_for :title, "Contact Us - Appcessorise" %>

<div class="min-h-screen bg-white">
  <%= render 'shared/navigation' %>

  <div class="relative isolate px-6 py-24 sm:py-32 lg:px-8">
    <!-- Decorative background blur -->
    <div aria-hidden="true" class="absolute inset-x-0 -top-40 -z-10 transform-gpu overflow-hidden blur-3xl sm:-top-80">
      <div style="clip-path: polygon(74.1% 44.1%, 100% 61.6%, 97.5% 26.9%, 85.5% 0.1%, 80.7% 2%, 72.5% 32.5%, 60.2% 62.4%, 52.4% 68.1%, 47.5% 58.3%, 45.2% 34.5%, 27.5% 76.7%, 0.1% 64.9%, 17.9% 100%, 27.6% 76.8%, 76.1% 97.7%, 74.1% 44.1%)" class="relative left-1/2 -z-10 aspect-[1155/678] w-[36.125rem] max-w-none -translate-x-1/2 rotate-[30deg] bg-gradient-to-tr from-blue-200 to-purple-300 opacity-30 sm:left-[calc(50%-40rem)] sm:w-[72.1875rem]"></div>
    </div>

    <div class="mx-auto max-w-2xl text-center">
      <h2 class="text-4xl font-bold tracking-tight text-gray-900 sm:text-5xl">Get in Touch</h2>
      <p class="mt-2 text-lg text-gray-600">Have a question? We'd love to hear from you. Send us a message and we'll respond as soon as possible.</p>
    </div>

    <%= form_with(model: @contact, url: contacts_path, class: "mx-auto mt-16 max-w-xl sm:mt-20") do |f| %>
      <% if @contact.errors.any? %>
        <div class="rounded-lg bg-red-50 p-4 mb-6">
          <div class="flex">
            <div class="ml-3">
              <h3 class="text-sm font-medium text-red-800">
                <%= pluralize(@contact.errors.count, "error") %> prohibited this contact from being saved:
              </h3>
              <div class="mt-2 text-sm text-red-700">
                <ul class="list-disc list-inside">
                  <% @contact.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        </div>
      <% end %>

      <div class="space-y-6">
        <div>
          <%= f.label :email, "Email *", class: "block text-sm font-semibold text-gray-900 mb-2" %>
          <%= f.email_field :email, required: true, class: "block w-full rounded-lg border border-gray-300 px-4 py-3 text-gray-900 focus:border-blue-500 focus:ring-2 focus:ring-blue-200 transition" %>
        </div>

        <div>
          <%= f.label :message, "Message *", class: "block text-sm font-semibold text-gray-900 mb-2" %>
          <%= f.text_area :message, rows: 6, required: true, placeholder: "Tell us what's on your mind...", class: "block w-full rounded-lg border border-gray-300 px-4 py-3 text-gray-900 focus:border-blue-500 focus:ring-2 focus:ring-blue-200 transition" %>
        </div>
      </div>

      <div class="mt-10">
        <%= f.submit "Send Message", class: "block w-full rounded-xl bg-gradient-to-r from-blue-600 to-purple-600 px-4 py-3.5 text-center text-sm font-bold text-white shadow-lg hover:from-blue-700 hover:to-purple-700 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600 transition transform hover:scale-105 cursor-pointer" %>
      </div>
    <% end %>
  </div>
</div>
