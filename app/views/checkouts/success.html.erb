<% content_for :title, "Payment Successful - Appcessorise" %>

<div class="min-h-screen bg-gradient-to-br from-gray-50 to-green-50 py-12">
  <%= render 'shared/navigation' %>

  <div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8 mt-16">
    <div class="bg-white rounded-2xl shadow-xl overflow-hidden text-center p-12">
      <!-- Success Icon -->
      <div class="w-24 h-24 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-6">
        <svg class="w-12 h-12 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
        </svg>
      </div>

      <!-- Success Message -->
      <h1 class="text-4xl font-bold text-gray-900 mb-4">Payment Successful!</h1>
      <p class="text-lg text-gray-600 mb-8">
        Thank you for your purchase. Your order has been confirmed and you'll receive a confirmation email shortly.
      </p>

      <% if @order.present? %>
        <div class="bg-gray-50 rounded-xl p-6 mb-8 text-left">
          <h2 class="text-xl font-bold text-gray-900 mb-4">Order Details</h2>
          <div class="space-y-2">
            <div class="flex justify-between">
              <span class="text-gray-600">Order ID:</span>
              <span class="font-semibold text-gray-900">#<%= @order.id %></span>
            </div>
            <div class="flex justify-between">
              <span class="text-gray-600">Total Amount:</span>
              <span class="font-semibold text-gray-900">$<%= sprintf("%.2f", @order.amount) %></span>
            </div>
            <div class="flex justify-between">
              <span class="text-gray-600">Status:</span>
              <span class="px-3 py-1 bg-green-100 text-green-700 rounded-lg font-medium text-sm"><%= @order.status.titleize %></span>
            </div>
          </div>
        </div>
      <% end %>

      <!-- Action Buttons -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <%= link_to products_path, class: "px-8 py-3 bg-gradient-to-r from-blue-600 to-purple-600 text-white rounded-xl font-semibold hover:from-blue-700 hover:to-purple-700 transition transform hover:scale-105 shadow-lg" do %>
          Continue Shopping
        <% end %>
        <%= link_to dashboard_path, class: "px-8 py-3 bg-white border-2 border-gray-300 text-gray-700 rounded-xl font-semibold hover:bg-gray-50 transition" do %>
          View Dashboard
        <% end %>
      </div>

      <!-- Additional Info -->
      <div class="mt-8 pt-8 border-t border-gray-200">
        <p class="text-sm text-gray-500">
          Questions about your order? <%= link_to "Contact us", about_path, class: "text-blue-600 hover:underline" %>
        </p>
      </div>
    </div>
  </div>
</div>
